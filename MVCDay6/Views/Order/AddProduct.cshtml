@model OrderProduct
@{
    SelectList selectLists = ViewBag.Products;
}
<form asp-action="AddProduct">
    <input type="hidden" asp-for="OrderId" value="@ViewBag.orderId" />
    <div class="form-group">
        <label class="control-label">Product</label>
        <select asp-for="ProductId" asp-items="selectLists" class="form-select">
            <option value="-1 ">Choose A Product</option>
        </select>
        <span asp-validation-for="Order.CustID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="form-control" />
    </div>
</form>

